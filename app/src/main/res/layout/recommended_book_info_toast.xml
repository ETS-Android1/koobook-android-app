<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/recommended_book_info_toast"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_recommended_book_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/test_thumbnail"
        android:layout_gravity="left"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:elevation="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_title_of_selected_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Book title"
            android:textSize="18dp"
            android:fontFamily="@font/helvetic_neuva_condensed"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/button_recommended_book_view_more"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/view_more_button"
            android:fontFamily="@font/arial_regular"
            android:text="View more"
            android:textAllCaps="false"
            android:textSize="14dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            />


    </LinearLayout>



</LinearLayout>