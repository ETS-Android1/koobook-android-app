<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fragments.BookReviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical"
            android:background="@color/lightBlue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    >

                    <ImageView
                        android:id="@+id/imageview_bookthumbnail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/test_thumbnail"
                        android:layout_gravity="left"
                        android:layout_marginLeft="5dp"
                        android:elevation="10dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        />

                    <android.support.v7.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        app:cardBackgroundColor="@color/lightGrey"
                        android:elevation="15dp"
                        app:cardCornerRadius="0dp"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_weight="0.3"
                    android:background="@color/lightGrey"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="15dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textview_book_subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Sub title"
                        android:textSize="14dp"
                        android:fontFamily="@font/arial_regular"
                        android:textColor="@color/charcoalBlack"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ISBN: "
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/charcoalBlack"/>

                        <TextView
                            android:id="@+id/textview_book_isbn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1212212"
                            android:textSize="14dp"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/charcoalBlack"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Genres: "
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/charcoalBlack"/>

                        <TextView
                            android:id="@+id/textview_genres"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Social science"
                            android:textSize="14dp"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/charcoalBlack"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Authors: "
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/charcoalBlack"/>

                        <TextView
                            android:id="@+id/textview_authors"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dondah Patel"
                            android:textSize="14dp"
                            android:layout_marginLeft="2dp"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/charcoalBlack"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="1dp"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overall rating: "
                            android:textStyle="bold"
                            android:textSize="14dp"
                            android:fontFamily="@font/arial_regular"
                            android:textColor="@color/charcoalBlack"/>

                        <RatingBar
                            android:id="@+id/ratingbar_overallrating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="?android:attr/ratingBarStyleSmall"
                            />

                        <TextView
                            android:id="@+id/textview_overall_average_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/helvetic_neuva_condensed"
                            android:text="x"
                            android:textSize="16dp"/>

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:background="@color/white"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tablayout"
                android:background="@color/crimsonRed"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:tabIndicatorColor="@color/darkRed"
                app:tabIndicatorHeight="4dp"
                ></android.support.design.widget.TabLayout>

            <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/pager"></android.support.v4.view.ViewPager>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.79"
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="15dp"
            >


            <Button
                android:id="@+id/button_like"
                android:layout_weight="0.33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Like"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/like_button"
                android:fontFamily="@font/helvetic_neuva_condensed"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"/>

            <Button
                android:id="@+id/button_reviewlater"
                android:layout_weight="0.33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review Later"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/review_later_button"
                android:fontFamily="@font/helvetic_neuva_condensed"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"/>


            <Button
                android:id="@+id/button_dislike"
                android:layout_weight="0.33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dislike"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:background="@drawable/dislike_button"
                android:fontFamily="@font/helvetic_neuva_condensed"
                android:layout_gravity="center"/>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>