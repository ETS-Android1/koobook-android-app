<?xml version="1.0" encoding="utf-8"?>
<!-- Got material design background from https://365webresources.com/android-google-material-design-freebies/4/ -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/start_background_v2"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.8"
        >

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:adjustViewBounds="false"
            android:src="@drawable/koobook_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Koobook"
            android:gravity="center"
            android:fontFamily="@font/helvetic_neuva_condensed"
            android:textSize="40dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/white"
            android:textSize="14dp"/>

        <TextView
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First name"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/white"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/firstNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@color/white"
            android:textColor="@color/white"
            android:inputType="textPersonName"

             />
        <TextView
            android:id="@+id/firstNameRequiredTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_field_is_required"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/pinkRed"
            android:textSize="14dp"
            android:visibility="invisible"/>

        <TextView
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/white"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@color/white"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/emailRequiredTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_field_is_required"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/pinkRed"
            android:textSize="14dp"
            android:visibility="invisible"/>

        <TextView
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/white"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@color/white"
            android:inputType="textPassword"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/passwordsRequiredTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_field_is_required"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/pinkRed"
            android:textSize="14dp"
            android:visibility="invisible"/>


        <TextView
            android:paddingTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/white"
            android:textSize="14dp"/>

        <EditText
            android:id="@+id/confirmPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="@color/white"
            android:inputType="textPassword"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/passwordsDoesNotMatchTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/passwords_does_not_match"
            android:fontFamily="@font/arial_regular"
            android:textColor="@color/pinkRed"
            android:textSize="14dp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/sign_up_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/sign_up_button"
            android:fontFamily="@font/helvetic_neuva_condensed"
            android:onClick="signUpButtonClicked"
            android:text="Sign up"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/loginLinkText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arial_regular"
            android:gravity="bottom|center"
            android:paddingTop="10dp"
            android:text="@string/login"
            android:textColor="@color/white"

            android:textSize="14dp" />
    </LinearLayout>


</LinearLayout>