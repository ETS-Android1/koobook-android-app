<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:card_view="http://schemas.android.com/tools"
android:id="@+id/cardview_id"
android:clickable="true"
android:foreground="?android:attr/selectableItemBackground"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:cardview="http://schemas.android.com/apk/res-auto"
cardview:cardCornerRadius="4dp"
card_view:cardElevation="3dp"
    android:layout_margin="5dp">

<LinearLayout
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageview_search_result_book_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/test_thumbnail"
        android:layout_gravity="left"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:elevation="10dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/textview_search_result_book_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book title"
            android:textSize="18dp"
            android:fontFamily="@font/helvetic_neuva_condensed"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            />


        <TextView
            android:id="@+id/textview_search_result_book_authors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author:"
            android:textSize="14dp"
            android:fontFamily="@font/arial_regular"
            android:layout_marginBottom="10dp"
            />

        <Button
            android:id="@+id/button_book_row_view_more"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:background="@drawable/view_more_button"
            android:fontFamily="@font/arial_regular"
            android:text="View more"
            android:textAllCaps="false"
            android:textSize="13dp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"

            />

    </LinearLayout>

</LinearLayout>


</android.support.v7.widget.CardView>
