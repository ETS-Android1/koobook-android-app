<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--Credit to Pecepts from https://stackoverflow.com/questions/27965662/how-can-i-change-default-dialog-button-text-color-in-android-5 -->
    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">#00397F</item>
        <item name="android:colorAccent">#0AAEEF</item>
    </style>

    <!--Credit to reVerse from https://stackoverflow.com/questions/37108954/android-spinner-underline-color -->
    <style name="ThemeSpinner">
        <!-- Color when pressed -->
        <item name="colorAccent">@color/navyBlue</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/lightBlue</item>
    </style>




</resources>
